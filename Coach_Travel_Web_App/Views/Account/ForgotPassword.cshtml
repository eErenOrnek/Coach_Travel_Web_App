
@{
    ViewData["Title"] = "Forgot Password";
    Layout = "~/Views/Shared/_ContentLayout.cshtml";
}
<div class="container destinations">
    <h6 class="display-4">Forgot Password</h6>
    <hr />
    <form asp-controller="Account" asp-action="ForgotPassword" method="post">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group row mb-2">
                    <label class="col-md-4 col-form-label">Please enter your registered e-mail address.</label>
                    <div class="col-md-8">
                        <input class="form-control" type="email" name="email"/>
                    </div>
                </div>
                <div class="form-group row mb-2">
                    <div class="col-md-8 offset-md-4">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
